@using Microsoft.Extensions.Configuration
@using SFA.DAS.DigitalCertificates.Web.Extensions
@using SFA.DAS.DigitalCertificates.Web.ViewDataKeys
@inject IConfiguration Configuration

@{ 
    var showServiceNavigation = !(bool)(ViewData[ViewDataKeys.HideServiceNavigation] ?? false);
}

<!DOCTYPE html>
<html lang="en" class="govuk-template">
<head>
    <partial name="_GoogleAnalytics" model="GoogleAnalyticsTag.Head" />
    <meta charset="utf-8" />
    <title>@(ViewData[ViewDataKeys.ServiceName])</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#0b0c0c" />

    <link rel="shortcut icon" href="assets/images/favicon.ico" type="image/x-icon" />
    <link rel="mask-icon" href="assets/images/govuk-mask-icon.svg" color="#0b0c0c" />
    <link rel="apple-touch-icon" sizes="180x180" href="assets/images/govuk-apple-touch-icon-180x180.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="assets/images/govuk-apple-touch-icon-167x167.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="assets/images/govuk-apple-touch-icon-152x152.png" />
    <link rel="apple-touch-icon" href="assets/images/govuk-apple-touch-icon.png" />

    <!--[if !IE 8]><!-->
    <link href="css/main.css" rel="stylesheet" />
    <link href="/css/app.css" rel="stylesheet" no-cdn />
    <!--<![endif]-->

    <meta property="og:image" content="assets/images/govuk-opengraph-image.png">
</head>

<body class="govuk-template__body">
    <partial name="_GoogleAnalytics" model="GoogleAnalyticsTag.Body" />

    <script>
        document.body.className += ' js-enabled' + ('noModule' in HTMLScriptElement.prototype ? ' govuk-frontend-supported' : '');
    </script>

    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <partial name="_CookieBanner"></partial>

    <partial name="_Header" />
    @if (showServiceNavigation)
    {
        <partial name="_ServiceNavigation" />
    }

    <div class="govuk-phase-banner govuk-width-container">
        <p class="govuk-phase-banner__content">
            <strong class="govuk-tag govuk-phase-banner__content__tag">
                beta
            </strong>
            <span class="govuk-phase-banner__text">
                This is a new service.
            </span>
        </p>
    </div>

    <div class="govuk-width-container">
        @RenderBody()
    </div>
    <partial name="_Footer" />
    <partial name="_GoogleAnalyticsInfo" />

    @* These javascripts are not included in the project they are loaded from the cdn *@
    <script src="libs/govuk-frontend/all.js"></script>
    <script src="libs/jquery/jquery.min.js"></script>
    <script src="js/das-all.js"></script>
    <script src="js/app.min.js"></script>
    
    @* This javascript is included in the project it is not loaded from the cdn *@
    <script src="/js/app.js" no-cdn></script>
    
    <script>
        window.GOVUKFrontend.initAll();
        window.DASFrontend.initAll();
    </script>
</body>

</html>