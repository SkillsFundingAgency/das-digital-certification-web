@model SFA.DAS.DigitalCertificates.Web.Models.Sharing.CheckQualificationViewModel
@using SFA.DAS.DigitalCertificates.Web.Controllers
@using SFA.DAS.DigitalCertificates.Web.ViewDataKeys

@{
    ViewData[ViewDataKeys.Title] = ViewData[ViewDataKeys.ServiceName] + " Check an apprenticeship qualification";
    ViewBag.GaData.Vpv = @ViewData[ViewDataKeys.GaDataVpvPrefix] + "check-an-apprenticeship-qualification";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Check an apprenticeship qualification</h1>

        <p class="govuk-body">You can use this service to check an apprenticeship qualification.</p>

        <p class="govuk-body">This link will stop working at @Model.FormattedExpiry.</p>

        <p class="govuk-body">You must use the certificate data appropriately for verification or your <br /> organisation's administration and comply with data security measures.</p>

        <form method="post" asp-route="CheckQualificationRoutePost" asp-route-code="@Model.Code">
            <button class="govuk-button govuk-button--start" data-module="govuk-button">
                Start
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                </svg>
            </button>
        </form>
    </div>
</div>
